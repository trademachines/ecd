{
  "name": "@trademachines/ecd",
  "devDependencies": {
    "@types/aws-lambda": "^0.0.16",
    "@types/chai": "^4.0.3",
    "@types/commander": "^2.9.1",
    "@types/ffi": "^0.0.19",
    "@types/fs-extra": "^4.0.0",
    "@types/jasmine": "^2.5.53",
    "aws-sdk-mock": "^1.7.0",
    "chai": "^4.1.1",
    "copy": "^0.3.0",
    "coveralls": "^2.13.1",
    "cucumber": "^2.3.0",
    "istanbul": "^0.4.5",
    "jasmine": "^2.6.0",
    "jasmine-spec-reporter": "^2.7.0",
    "thenify": "^3.3.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "ajv": "^5.0.0",
    "aws-sdk": "^2.46.0",
    "commander": "^2.9.0",
    "ffi": "^2.2.0",
    "fs-extra": "^4.0.1",
    "glob-stream": "^6.1.0",
    "injection-js": "^2.1.0",
    "lodash": "^4.17.4",
    "reflect-metadata": "^0.1.10",
    "tslib": "^1.7.1",
    "unzip": "^0.1.11"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.json && copy src/_resources/**/* build/src/_resources",
    "watch": "tsc -w -p tsconfig.json",
    "lint": "tslint -t stylish '{src,spec}/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test:unit": "JASMINE_CONFIG_PATH=jasmine.json istanbul test jasmine",
    "test:acceptance": "node -r 'reflect-metadata' ./node_modules/.bin/cucumberjs --compiler ts:ts-node/register",
    "test": "npm run test:unit && npm run test:acceptance",
    "test:ci": "npm run clean && npm_config_coverage=1 npm test && npm run coveralls",
    "test:watch": "nodemon --config nodemon.test.json",
    "dist": "npm run build && yarn install --production --modules-folder ./build/node_modules",
    "postinstall": "npm rebuild",
    "coveralls": "cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  }
}
